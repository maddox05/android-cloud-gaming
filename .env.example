# Android Cloud Gaming - Environment Configuration
# Copy this file to .env and fill in your values

# Signal Server Configuration
SIGNAL_PORT=8080
SIGNAL_URL=localhost:8080

# Redroid Docker Image
REDROID_IMAGE=redroid/redroid
REDROID_TAG=12.0.0_64only-latest

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Cloudflare TURN Server
# Get these from Cloudflare Dashboard > Calls > TURN Keys
CLOUDFLARE_TURN_KEY_ID=your_turn_key_id
CLOUDFLARE_TURN_API_TOKEN=your_turn_api_token

# Cloudflare R2 Storage (for Redroid images)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
CLOUDFLARE_R2_TOKEN=your_r2_token
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
